<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="background" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <HBox alignment="CENTER" cacheShape="false">
               <children>
                  <VBox>
                     <children>
                        <Label text="Questions in this question set">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <JFXListView fx:id="questionList" prefHeight="400.0" prefWidth="500.0" VBox.vgrow="ALWAYS" />
                     </children>
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <JFXButton fx:id="addQuestionBtn" buttonType="RAISED" onAction="#addNewQuestion" prefWidth="60.0" style="-fx-background-color: white;" text="Add">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="40.0" />
                     </HBox.margin>
                  </JFXButton>
                  <Region HBox.hgrow="ALWAYS" />
                  <VBox alignment="CENTER">
                     <children>
                        <JFXButton fx:id="doneBtn" buttonType="RAISED" defaultButton="true" onAction="#doneCreation" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: white;" text="Done">
                           <VBox.margin>
                              <Insets bottom="30.0" left="20.0" right="20.0" top="70.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </JFXButton>
                     </children>
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
                  <JFXButton fx:id="deleteQuestionBtn" buttonType="RAISED" onAction="#deleteSelectedQuestion" prefWidth="60.0" style="-fx-background-color: white;" text="Delete">
                     <HBox.margin>
                        <Insets bottom="40.0" />
                     </HBox.margin>
                     <font>
                        <Font size="13.0" />
                     </font>
                  </JFXButton>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
